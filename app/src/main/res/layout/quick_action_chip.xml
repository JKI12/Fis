<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MaterialComponents.Chip.Action"
    android:id="@+id/qa_chip"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:checkable="false"
    android:clickable="true"
    android:textColor="@color/inventory_view_top_bar"
    app:chipCornerRadius="@dimen/large_margin"
    app:chipStrokeColor="@color/inventory_view_top_bar"
    app:chipStrokeWidth="@dimen/quick_action_stoke"
    app:chipBackgroundColor="@color/md_white_1000"
    app:closeIconEnabled="false"
    android:fontFamily="@font/qs"
    android:layout_marginStart="@dimen/small_margin"
    android:layout_marginEnd="@dimen/margin"
    android:text="@string/input_title"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
/>